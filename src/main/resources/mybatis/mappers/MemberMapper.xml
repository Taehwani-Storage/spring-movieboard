<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.UserMapper">
    <select id="findAll" parameterType="string" resultType="movieDTO">
        SELECT * FROM movies
    </select>
    <select id="findById" parameterType="int" resultType="movieDTO">
        SELECT * FROM movies
        WHERE id = #{id}
    </select>

    <select id="findByNickname" parameterType="string" resultType="memberDTO">
        SELECT * FROM users
        WHERE nickname = #{nickname}
    </select>
    <select id="findByUserId" parameterType="int" resultType="memberDTO">
        SELECT * FROM users
        WHERE id = #{id}
    </select>

</mapper>
